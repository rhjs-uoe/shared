\newcommand{\lsemantics}{\mathopen{\lbrack\mkern-3mu\lbrack}}
\newcommand{\rsemantics}{\mathclose{\rbrack\mkern-3mu\rbrack}}

% new language
\lstdefinelanguage{Isar}%
{
  morekeywords=[2]{
    _first,
    theory,begin,end,types,datatype,consts,defs,primrec,
    syntax,translations,apply,
    lemma,theorem,corollary,definition,lift_definition,inductive,where,locale,context,abbreviation,interpretation,
    done,next,proof,and,qed,
    assumes,fixes,shows,case,goal,obtains,defines,OF,in,
    fixed variables,
    _last
  },
  keywordstyle={[2]\bfseries\color{isa-kwcolor-2}},
  morekeywords=[3]{
  	sorry,oops
  },
  keywordstyle={[3]\bfseries\color{isa-kwcolor-3}},
  morekeywords=[4]{
    then,this,thus,hence,have,assume,obtain,moreover,fix,show,by,using,unfolding,
    ultimately,let,if,for,else,consider
  },
  keywordstyle={[4]\bfseries\color{isa-kwcolor-4}},
  sensitive=true,
  morecomment=[l]{-- },
  morecomment=[s]{(*}{*)},
%  morecomment=[s]{\\<\^cancel>\\<open>}{\\<close>}, TODO ⌦
  literate=
%   snipping
    {(*...*)}{{\textcolor{isa-proofsnip}{\textbf{...}}}}3
    {<proof>}{{\textcolor{isa-proofsnip}{\textbf{<proof>}}}}7
%   operators and binary relations
    {\\<not>}{{$\neg$}}1
    {\\<times>}{{$×$}}1
    {\\<equiv>}{{$\equiv$}}1
    {~=}{{$\not=$}}1
    {\\<noteq>}{{$\neq$}}1
    {\\<ge>}{{$\geq$}}1
    {\\<le>}{{$\leq$}}1
    {\\<parallel>}{{$\parallel$}}1
    {\\<and>}{{$\land$}}1
    {\\<or>}{{$\lor$}}1
%   sets
    {\\<in>}{{$\in$}}1
    {\\<notin>}{{$\notin$}}1
    {\\<union>}{{$\cup$}}1
    {\\<Union>}{{$\bigcup$}}2
    {\\<inter>}{{$\cap$}}1
    {\\<emptyset>}{{$\emptyset$}}1
    {\\<subseteq>}{{$\subseteq$}}1
%   arrows
    {\\<Rightarrow>}{{$\Rightarrow$}}2%
    {\\<rightleftharpoons>}{{$\rightleftharpoons$}}2
    {\\<Longrightarrow>}{{$\Longrightarrow$}}3
    {\\<longrightarrow>}{{$\longrightarrow$}}3
    {\\<leftrightarrow>}{{$\leftrightarrow$}}2
    {\\<longleftrightarrow>}{{$\longleftrightarrow$}}3
    {\\<leadsto>}{{$\rightsquigarrow$}}2
%   unary operators
    {\\<exists>}{{$\exists$}}1
    {\\<forall>}{{$\forall$}}1
    {\\<bigwedge>}{{$\bigwedge$}}1
    {\\<And>}{{$\bigwedge$}}1
%   letters and symbols
    {\\<theta>}{{$\theta$}}1
    {\\<Theta>}{{$\Theta$}}1
    {\\<lambda>}{{$\lambda$}}1
    {\\<triangle>}{{$\triangle$}}1
    {\\<infinity>}{{$\infty$}}1
%   anything else
    {\\<lbrakk>}{{$\lsemantics$}}1
    {\\<rbrakk>}{{$\rsemantics$}}1
    {\\<open>}{{$\langle$}}1
    {\\<close>}{{$\rangle$}}1
%    {\\<\^cancel>}{{\%}}1
%    {\\<\^sub>}{{\_}}1
%    {ü}{"u}1 {ä}{"a}1 {ö}{"o}1
%    {Ü}{"U}1 {Ä}{"A}1 {Ö}{"O}1 {ß}{{ss}}1
}[keywords,comments,strings]%

% useful defaults
\lstset{
%  labelstep=1,
%  labelstyle=\tiny,
%  labelsep=5pt,
